<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.MainActivity"

    android:background="@color/Black"

    android:weightSum="2.5"
    android:orientation="vertical"

    >



   <LinearLayout

       android:layout_width="match_parent"
       android:layout_height="@dimen/cardview_default_elevation"

       android:orientation="vertical"
        android:layout_weight="1"
       android:layout_margin="5dp"


       >

        <TextView

            android:id="@+id/Main_View"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="02"
            android:textSize="35dp"
            android:textColor="@color/Orange"
            android:gravity="right"

            android:layout_marginTop="15dp"

            >

        </TextView>

       <TextView

           android:id="@+id/Secondary_View"


           android:layout_width="match_parent"
           android:layout_height="wrap_content"

           android:text="02"
           android:textSize="25dp"
           android:textColor="@color/white"
            android:gravity="right"

           >

       </TextView>

   </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/cardview_default_elevation"
        android:layout_weight="1.5"
        android:orientation="horizontal"
        >

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/Other_Buttons"

            android:layout_width="match_parent"
            android:layout_height="match_parent"

            app:layout_constraintRight_toLeftOf="@id/Main_Buttons"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            android:layout_marginRight="90dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"

            android:background="@drawable/round_layout"

            >

        <android.widget.Button

            android:id="@+id/BTN_9"

            android:layout_width="95dp"
            android:layout_height="wrap_content"

            android:textSize="45dp"
            android:text="9"
            android:textColor="@color/white"

            android:background="@drawable/round_layout"
            android:backgroundTint="@color/Black"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            android:layout_marginTop="45dp"
            android:layout_marginRight="10dp"

            > </android.widget.Button>

            <android.widget.Button

                android:id="@+id/BTN_8"

                android:layout_width="95dp"
                android:layout_height="wrap_content"

                android:textSize="45dp"
                android:text="8"
                android:textColor="@color/white"

                android:background="@drawable/round_layout"
                android:backgroundTint="@color/Black"

                app:layout_constraintRight_toLeftOf="@id/BTN_9"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toRightOf="@id/BTN_7"

                android:layout_marginTop="45dp"

                >

        </android.widget.Button>

        <android.widget.Button

                android:id="@+id/BTN_7"

                android:layout_width="95dp"
                android:layout_height="wrap_content"

                android:textSize="45dp"
                android:text="7"
                android:textColor="@color/white"

                android:background="@drawable/round_layout"
                android:backgroundTint="@color/Black"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"

                android:layout_marginTop="45dp"
                android:layout_marginLeft="10dp"

                >

        </android.widget.Button>

        <android.widget.Button

                android:id="@+id/BTN_6"

                android:layout_width="95dp"
                android:layout_height="wrap_content"

                android:textSize="45dp"
                android:text="6"
                android:textColor="@color/white"

                android:background="@drawable/round_layout"
                android:backgroundTint="@color/Black"

                app:layout_constraintTop_toBottomOf="@id/BTN_9"
                app:layout_constraintRight_toRightOf="parent"

                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"

                >

        </android.widget.Button>

            <android.widget.Button

                android:id="@+id/BTN_4"

                android:layout_width="95dp"
                android:layout_height="wrap_content"

                android:textSize="45dp"
                android:text="4"
                android:textColor="@color/white"

                android:background="@drawable/round_layout"
                android:backgroundTint="@color/Black"

                app:layout_constraintTop_toBottomOf="@id/BTN_7"
                app:layout_constraintLeft_toLeftOf="parent"

                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"

                >

        </android.widget.Button>

        <android.widget.Button

                android:id="@+id/BTN_5"

                android:layout_width="95dp"
                android:layout_height="wrap_content"

                android:textSize="45dp"
                android:text="5"
                android:textColor="@color/white"

                android:background="@drawable/round_layout"
                android:backgroundTint="@color/Black"

                app:layout_constraintTop_toBottomOf="@id/BTN_8"
                app:layout_constraintLeft_toRightOf="@id/BTN_4"
                app:layout_constraintRight_toLeftOf="@id/BTN_6"

                android:layout_marginTop="10dp"

                >

        </android.widget.Button>

            <android.widget.Button

                android:id="@+id/BTN_3"

                android:layout_width="95dp"
                android:layout_height="wrap_content"

                android:textSize="45dp"
                android:text="3"
                android:textColor="@color/white"

                android:background="@drawable/round_layout"
                android:backgroundTint="@color/Black"

                app:layout_constraintTop_toBottomOf="@id/BTN_6"
                app:layout_constraintRight_toRightOf="parent"

                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"

                >

            </android.widget.Button>
            <android.widget.Button

                android:id="@+id/BTN_2"

                android:layout_width="95dp"
                android:layout_height="wrap_content"

                android:textSize="45dp"
                android:text="2"
                android:textColor="@color/white"

                android:background="@drawable/round_layout"
                android:backgroundTint="@color/Black"

                app:layout_constraintTop_toBottomOf="@id/BTN_5"
                app:layout_constraintLeft_toRightOf="@id/BTN_1"
                app:layout_constraintRight_toLeftOf="@id/BTN_6"

                android:layout_marginTop="10dp"

                >

            </android.widget.Button>
            <android.widget.Button

                android:id="@+id/BTN_1"

                android:layout_width="95dp"
                android:layout_height="wrap_content"

                android:textSize="45dp"
                android:text="1"
                android:textColor="@color/white"

                android:background="@drawable/round_layout"
                android:backgroundTint="@color/Black"

                app:layout_constraintTop_toBottomOf="@id/BTN_4"
                app:layout_constraintLeft_toLeftOf="parent"

                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                >

            </android.widget.Button>

            <android.widget.Button

                android:id="@+id/BTN_0"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="45dp"
                android:text="0"
                android:textColor="@color/white"

                android:background="@drawable/round_layout"
                android:backgroundTint="@color/Black"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/BTN_2"

                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                >

            </android.widget.Button>

            <android.widget.Button

                android:id="@+id/DOT"

                android:layout_width="95dp"
                android:layout_height="wrap_content"

                android:textSize="45dp"
                android:text="."
                android:textColor="@color/white"

                android:background="@drawable/round_layout"
                android:backgroundTint="@color/Orange"

                app:layout_constraintTop_toBottomOf="@id/BTN_0"
                app:layout_constraintRight_toRightOf="parent"

                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                >

            </android.widget.Button>

            <ImageButton

                android:id="@+id/REMOVE"

                android:layout_width="95dp"
                android:layout_height="60dp"

                android:src="@android:drawable/ic_input_delete"

                android:background="@drawable/round_layout"
                android:backgroundTint="@color/Orange"

                app:layout_constraintTop_toBottomOf="@id/BTN_0"
                app:layout_constraintRight_toLeftOf="@id/DOT"
                app:layout_constraintLeft_toRightOf="@id/CLEAN"

                android:adjustViewBounds="true"
                android:scaleType="center"

                android:layout_marginTop="10dp"

                >

            </ImageButton>

            <android.widget.Button

                android:id="@+id/CLEAN"

                android:layout_width="95dp"
                android:layout_height="wrap_content"

                android:textSize="45dp"
                android:text="C"
                android:textColor="@color/white"

                android:background="@drawable/round_layout"
                android:backgroundTint="@color/Orange"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@id/BTN_0"

                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                >

            </android.widget.Button>


        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout

            android:id="@+id/Main_Buttons"

            android:layout_width="wrap_content"
            android:layout_height="match_parent"

            android:background="@drawable/round_layout"

            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            android:layout_margin="5dp"

            >


            <android.widget.Button

                android:id="@+id/BTN_Plus"

                android:layout_width="70dp"
                android:layout_height="wrap_content"

                android:background="@drawable/round_layout"
                android:backgroundTint="@color/Orange"

                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="45dp"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"

                android:text="+"
                android:textSize="45dp"
                android:textColor="@color/white"
                android:gravity="center"

                > </android.widget.Button>

            <android.widget.Button

                android:id="@+id/BTN_Minus"

                android:layout_width="70dp"
                android:layout_height="wrap_content"

                android:background="@drawable/round_layout"
                android:backgroundTint="@color/Orange"

                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"

                app:layout_constraintTop_toBottomOf="@id/BTN_Plus"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"

                android:text="-"
                android:textSize="45dp"
                android:textColor="@color/white"
                android:gravity="center"

                > </android.widget.Button>

            <android.widget.Button

                android:id="@+id/BTN_Multiplication"

                android:layout_width="70dp"
                android:layout_height="wrap_content"

                android:background="@drawable/round_layout"
                android:backgroundTint="@color/Orange"

                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"

                app:layout_constraintTop_toBottomOf="@id/BTN_Minus"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"

                android:text="ร"
                android:textSize="45dp"
                android:textColor="@color/white"
                android:gravity="center"

                > </android.widget.Button>

            <android.widget.Button

                android:id="@+id/BTN_Division"

                android:layout_width="70dp"
                android:layout_height="wrap_content"

                android:background="@drawable/round_layout"
                android:backgroundTint="@color/Orange"

                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"

                app:layout_constraintTop_toBottomOf="@id/BTN_Multiplication"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"

                android:text="รท"
                android:textSize="45dp"
                android:textColor="@color/white"
                android:gravity="center"

                > </android.widget.Button>

            <android.widget.Button

                android:id="@+id/BTN_Equal"

                android:layout_width="70dp"
                android:layout_height="wrap_content"

                android:background="@drawable/round_layout"
                android:backgroundTint="@color/white"

                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"

                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/BTN_Division"

                android:text="="
                android:textSize="45dp"
                android:textColor="@color/Black"
                android:gravity="center"

                > </android.widget.Button>



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>


</LinearLayout>